# Configurações do Banco de Dados
DATABASE_URL=postgresql://user:password@localhost/casa_inteligente
REDIS_URL=redis://localhost:6379

# APIs de Tomadas TAPO
TAPO_USERNAME=seu_email_tapo
TAPO_PASSWORD=sua_senha_tapo
TAPO_DEVICES=["geladeira","notebook","purificador"]

# Configuração de Energia
ENERGY_COST_PER_KWH=0.85

# Notificações - Telegram
TELEGRAM_BOT_TOKEN=seu_bot_token
TELEGRAM_CHAT_ID=seu_chat_id

# Notificações - Email
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=seu_email@gmail.com
EMAIL_PASSWORD=sua_app_password
EMAIL_RECIPIENTS=["email1@example.com","email2@example.com"]

# LLM APIs
OPENAI_API_KEY=sua_openai_key
GOOGLE_AI_API_KEY=sua_google_ai_key

# Monitoramento
COLLECTION_INTERVAL_MINUTES=15
REPORT_TIME=20:00

# Alertas
ANOMALY_THRESHOLD=2.0
MAX_DAILY_COST=50.0

# Debug
DEBUG=false
